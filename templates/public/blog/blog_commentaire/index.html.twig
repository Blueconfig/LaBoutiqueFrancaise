{% extends 'base.html.twig' %}

{% block title %}BlogCommentaire index{% endblock %}

{% block body %}
    <h1>BlogCommentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Commentaire</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog_commentaire in blog_commentaires %}
            <tr>
                <td>{{ blog_commentaire.id }}</td>
                <td>{{ blog_commentaire.name }}</td>
                <td>{{ blog_commentaire.email }}</td>
                <td>{{ blog_commentaire.commentaire }}</td>
                <td>{{ blog_commentaire.createdAt ? blog_commentaire.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ blog_commentaire.updatedAt ? blog_commentaire.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ blog_commentaire.etat ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_public_blog_blog_commentaire_show', {'id': blog_commentaire.id}) }}">show</a>
                    <a href="{{ path('app_public_blog_blog_commentaire_edit', {'id': blog_commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_public_blog_blog_commentaire_new') }}">Create new</a>
{% endblock %}
